<!DOCTYPE html>
<html ng-cloak ng-app="chatApp">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/teams.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <link rel='stylesheet' href='/javascripts/chat.js'/>

  </head>
  <body>
    <div class="wrapper">
      <header class="navbar">
        <div class="container-fluid">
          <a class="navbar-brand" href="#">
            <img alt="Brand" width="30" height="30" src="/images/hacklogo.png">
          </a>
        </div>
      </header>

      <section class="col-md-1">
        <div id="fp-nav" class="left" style="color: rgb(0, 0, 0); margin-top: -73.5px;">
          <ul>
            <li>
              <a href="/">
                <span>
                </span>
              </a>
            </li>
            <li>
              <a href="teams" class="active">
                <span>
                </span>
              </a>
            </li>
            <li>
              <a href="account">
                <span>
                </span>
              </a>
            </li>
          </ul>
        </div>
      </section>
      <section class="col-md-5">

        <div class="row panel">
          <div class="panel panel-default">
            <div class="panel-body">
              <h1>defHacks();</h1>
              <ul>
                <li>Person 1:
                  <ul>
                    <li>Skills: Quel, Que, Chose</li>
                    <li>Hackathons: cetteHack, autreHack</li>
                  </ul>
                </li>
                <li>Person 2:
                  <ul>
                    <li>Skills: Autre, Chose</li>
                    <li>Hackathons: defHacks();, autreHacks();</li>
                  </ul>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <section class="col-md-5">

        <div class='cont'>
          <h1> Messenger </h1>
          <div class='chatbox' ng-controller="MessageCtrl as chatMessage">
            <div class='chatbox__user-list'>
              <h1>User list</h1>
              <div class='chatbox__user--active'>
                <p>Jack Thomson</p>
              </div>
              <div class='chatbox__user--busy'>
                <p>Angelina Jolie</p>
              </div>
              <div class='chatbox__user--active'>
                <p>George Clooney</p>
              </div>
              <div class='chatbox__user--active'>
                <p>Seth Rogen</p>
              </div>
              <div class='chatbox__user--away'>
                <p>John Lydon</p>
              </div>
            </div>
            <div class="chatbox__messages" ng-repeat="message in messages">
              <div class="chatbox__messages__user-message">
                <div class="chatbox__messages__user-message--ind-message">
                  <p class="name">{{message.Name}}</p>
                  <br/>
                  <p class="message">{{message.Message}}</p>
                </div>
              </div>
            </div>
            <form>
              <input type="text" placeholder="Enter your message">
            </form>
          </div>


        </div>

        <footer>
        </footer>
    </div>
  </body>
</html>
